<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.171" fx:controller="org.example.librarymanagementsystem.controller.SearchBookController">
    <children>
        <Label text="Search Books" style="-fx-font-size: 24px;" />
        <HBox spacing="10" alignment="CENTER">
            <children>
                <TextField fx:id="searchField" promptText="Enter title, author, or ISBN" />
                <Button text="Search" onAction="#handleSearchBook" />
            </children>
        </HBox>
        <TableView fx:id="bookTable" prefHeight="200" prefWidth="300">
            <columns>
                <TableColumn fx:id="titleColumn" text="Title" />
                <TableColumn fx:id="authorColumn" text="Author" />
                <TableColumn fx:id="isbnColumn" text="ISBN" />
            </columns>
        </TableView>
    </children>
    <padding>
        <Insets top="20" right="20" bottom="20" left="20" />
    </padding>
</VBox>
