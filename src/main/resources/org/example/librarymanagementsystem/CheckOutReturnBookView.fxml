<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.171" fx:controller="org.example.librarymanagementsystem.controller.CheckOutReturnBookController">
    <children>
        <Label text="Check Out/Return Book" style="-fx-font-size: 24px;" />
        <GridPane hgap="10" vgap="10">
            <columnConstraints>
                <ColumnConstraints />
                <ColumnConstraints />
            </columnConstraints>
            <children>
                <Label text="Book:" GridPane.rowIndex="0" GridPane.columnIndex="0" />
                <ComboBox fx:id="bookComboBox" GridPane.rowIndex="0" GridPane.columnIndex="1" />

                <Label text="Status:" GridPane.rowIndex="1" GridPane.columnIndex="0" />
                <ComboBox fx:id="statusComboBox" GridPane.rowIndex="1" GridPane.columnIndex="1">
                    <items>
                        <FXCollections fx:factory="observableArrayList">
                            <String fx:value="Checked Out" />
                            <String fx:value="Returned" />
                        </FXCollections>
                    </items>
                </ComboBox>
            </children>
        </GridPane>
        <HBox spacing="10" alignment="CENTER">
            <children>
                <Button text="Update Status" onAction="#handleUpdateStatus" />
                <Button text="Cancel" onAction="#handleCancel" />
            </children>
        </HBox>
    </children>
    <padding>
        <Insets top="20" right="20" bottom="20" left="20" />
    </padding>
</VBox>
