<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.171" fx:controller="org.example.librarymanagementsystem.controller.MainController" spacing="20">
    <children>
        <VBox alignment="TOP_CENTER" spacing="10">
            <children>
                <Label text="Bienvenue à la bibliothèque de Maxence !" style="-fx-font-size: 18px;" />
                <Label text="Que souhaitez-vous faire aujourd'hui ?" style="-fx-font-size: 14px;" />
            </children>
        </VBox>
        <VBox alignment="CENTER" spacing="20">
            <children>
                <HBox alignment="CENTER">
                    <children>
                        <Button text="Add Book" onAction="#showAddBookView" />
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
    <padding>
        <Insets top="20" right="20" bottom="20" left="20" />
    </padding>
</VBox>
