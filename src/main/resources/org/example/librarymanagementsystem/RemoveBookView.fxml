<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.171" fx:controller="org.example.librarymanagementsystem.controller.RemoveBookController" spacing="20">
    <children>
        <TableView fx:id="bookTable">
            <columns>
                <TableColumn fx:id="titleColumn" text="Title" />
                <TableColumn fx:id="authorColumn" text="Author" />
                <TableColumn fx:id="isbnColumn" text="ISBN" />
            </columns>
        </TableView>
        <Button text="Remove Selected Book" onAction="#handleRemoveBook"/>
    </children>
</VBox>
